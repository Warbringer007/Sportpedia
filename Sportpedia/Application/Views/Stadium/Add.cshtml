@model Application.Models.StadiumModel

@{
    ViewBag.Title = "Dodavanje stadiona";
}

<h2>Informacije o novom borilištu:</h2>
@using (Html.BeginForm("Add", "Stadium", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="container">
        <form role="form">
            <table class="table-responsive col-md-12 table-hover table-condensed" style="margin-bottom: 5px">
                <tr>
                    <td colspan="2" style="color: red; font-weight: bold">@TempData["Greska"]</td>
                </tr>
                <tr>
                    <td class="col-md-2">Ime:</td>
                    <td colspan="2">@Html.TextBoxFor(m => m.Stadium.Name, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td class="col-md-2">Država:</td>
                    <td colspan="2">@Html.TextBoxFor(m => m.Stadium.Country, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td class="col-md-2">Maksimalni kapacitet borilišta:</td>
                    <td colspan="2">@Html.TextBoxFor(m => m.Stadium.Capacity, new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td class="col-md-2">GPS koordinate:</td>
                    <td class="col-md-1">Širina:</td>
                    <td class="col-md-2">@Html.TextBoxFor(m => m.Stadium.Latitude, new { @class = "form-control" })</td>
                    <td class="col-md-1">Dužina:</td>
                    <td class="col-md-2">@Html.TextBoxFor(m => m.Stadium.Longitude, new { @class = "form-control" })</td>
                    <td></td>
                </tr>
                <tr>
                    <td class="col-md-2">Slika borilišta:</td>
                    <td class="editor-field" colspan="2">
                        <input id="Image" name="Image" title="Odaberi sliku borilišta" type="file"/>
                    </td>
                </tr>
            </table>
            <button type="submit" class="btn btn-default">Unesi novo borilište</button>
        </form>
    </div>
}

